{
  "manifest_version": 3,
  "name": "Jira Sub-task Enhancer",
  "version": "0.1.0",
  "description": "Displays sub-task details in a table on Jira cards.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://paradigma.atlassian.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
   "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
   "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png"
    },
    "default_title": "improve your jira board"
  }
}