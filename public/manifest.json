{
  "manifest_version": 3,
  "name": "Jira Sub-task Enhancer",
  "version": "0.2.0",
  "description": "Displays sub-task details, allows status changes on Jira cards and allow collapsing the first column.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],  
  "optional_host_permissions": [
    "*://*/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
   "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
   "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png"
    },
    
    "default_title": "Improve your jira board"
  }
}